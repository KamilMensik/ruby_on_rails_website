<p style="color: green"><%= notice %></p>

<h1>Pizzas</h1>
<br>

<table class="table table-striped">
  <thead class="thread-dark">
    <tr>
      <th>
        NAME
      </th>
      <th>RATING</th>
    </tr>
  </thead>
  <tbody>
  <% @pizzas.each do |pizza| %>
    <tr>
      <td><%=pizza.name %></td>
      <td><%=pizza.rating %></td>
      <td><%= link_to "Show this pizza", pizza %></td>
    </tr>
  <% end %>
  </tbody>

</table>

<%= link_to "New pizza", new_pizza_path %>
